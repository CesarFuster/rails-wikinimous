<h1>Articles</h1>
<p> <%= Time.now%> </p>
<div class="create">
<p> <i class="fas fa-plus-circle"></i> <%= link_to "Create", new_article_path %> </p>
</div>
<br>
<div class="article">
<% @articles.each do |article| %>
  <h2><%= link_to article.title, article_path(article) %></h2>
  <p><%= link_to article.content.first(150), article_path(article) %> (...)</p>

<p><i class="fas fa-trash-alt"></i> <%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>
</div>
<p></p>


